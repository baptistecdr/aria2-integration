{
  "name": "aria2-integration",
  "private": true,
  "type": "module",
  "version": "4.11.4-SNAPSHOT.0",
  "scripts": {
    "lint": "biome check",
    "lint:fix": "biome check --fix --unsafe",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "build:firefox": "tsc && BROWSER=firefox vite build --emptyOutDir",
    "build:firefox:debug": "tsc && BROWSER=firefox NODE_ENV=development vite build --mode development --emptyOutDir",
    "build:firefox:debug:watch": "tsc && BROWSER=firefox NODE_ENV=development vite build --mode development --emptyOutDir --watch",
    "start:firefox": "web-ext run --source-dir ./dist/ --devtools",
    "build:chromium": "tsc && BROWSER=chromium vite build --emptyOutDir",
    "build:chromium:debug": "tsc && BROWSER=chromium NODE_ENV=development vite build --mode development --emptyOutDir",
    "build:chromium:debug:watch": "tsc && BROWSER=chromium NODE_ENV=development vite build --mode development --emptyOutDir --watch",
    "start:chromium": "web-ext run --source-dir ./dist/ -t chromium --devtools"
  },
  "dependencies": {
    "@baptistecdr/aria2": "5.0.3",
    "@stdlib/regexp-basename-posix": "0.2.2",
    "@stdlib/regexp-basename-windows": "0.2.3",
    "@stdlib/regexp-dirname-posix": "0.2.1",
    "@stdlib/regexp-dirname-windows": "0.2.1",
    "bootstrap": "5.3.8",
    "bootstrap-icons": "1.13.1",
    "class-transformer": "0.5.1",
    "filesize": "11.0.13",
    "luxon": "3.7.2",
    "path": "0.12.7",
    "react": "19.2.0",
    "react-bootstrap": "2.10.10",
    "react-dom": "19.2.0",
    "reflect-metadata": "0.2.2",
    "uuid": "13.0.0",
    "webextension-polyfill": "0.12.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/bootstrap": "5.2.10",
    "@types/jest": "30.0.0",
    "@types/luxon": "3.7.1",
    "@types/node": "24.7.2",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.1",
    "@types/webextension-polyfill": "0.12.4",
    "@vitejs/plugin-react": "5.0.4",
    "@vitest/coverage-v8": "3.2.4",
    "jsdom": "27.0.0",
    "memfs": "4.49.0",
    "typescript": "5.9.3",
    "vite": "7.1.9",
    "vite-plugin-node-polyfills": "0.24.0",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4",
    "web-ext": "8.10.0"
  }
}
