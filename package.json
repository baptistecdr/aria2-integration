    "@types/luxon": "3.4.2",
    "@types/node": "22.9.1",
    "@types/react": "18.3.12",
    "@types/react-bootstrap": "0.32.37",
    "@types/react-dom": "18.3.1",
    "@types/uuid": "10.0.0",
    "@types/webextension-polyfill": "0.12.1",
    "@vitejs/plugin-react": "4.3.3",
    "nodemon": "3.1.7",
    "typescript": "5.6.3",
    "vite": "5.4.11",
    "vite-plugin-node-polyfills": "0.22.0",
